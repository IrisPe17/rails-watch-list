<div class="banner">
  <h1><%=@list.name%></h1>
</div>
<div class="row mx-3">
  <% @bookmarks.each do |bookmark| %>
    <div class="col-12 col-lg-6 p-0 my-2">
      <div class="card-product mx-2">
        <%= image_tag bookmark.movie.poster_url%>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %> </p>
          <p><strong><%= bookmark.movie.rating %>/10</strong></p>
          <p><em>"<%= bookmark.comment %>"</em></p>
          <p><%= link_to 'Delete a bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }  %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list.id), class: "btn btn-info m-3"  %>
<%= link_to 'Delete list', list_path(@list), method: :delete, class: 'btn btn-info m-3', data: { confirm: 'Are you sure you want to delete this list?' } %>
