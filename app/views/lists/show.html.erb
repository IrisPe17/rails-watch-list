<div class="banner">
  <h1><%=@list.name%></h1>
</div>
<div class="container-fluid">
  <div class="row justify-content-between">
    <%= link_to "Create a bookmark", new_list_bookmark_path(@list.id), class: "btn btn-info m-2"  %>
    <%= link_to 'Delete list', list_path(@list), method: :delete, class: 'btn btn-danger m-2', data: { confirm: 'Are you sure you want to delete this list?' } %>
  </div>
  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-12 col-lg-6 p-0 my-2">
        <div class="card-product mx-2">
          <%= image_tag bookmark.movie.poster_url%>
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %></h2>
            <p><%= bookmark.movie.overview %> </p>
            <p><strong><%= bookmark.movie.rating %>/10</strong></p>
            <p><em>"<%= bookmark.comment %>"</em></p>
            <p><%= link_to  ('<i class="far fa-trash-alt"></i> Delete a bookmark').html_safe, bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'text-danger'  %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%  @list.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 160, width: 200, crop: :fill %>
    <% end %>
  </div>
</div>
