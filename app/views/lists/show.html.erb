<h1><%=@list.name%></h1>

<ul>
<% @bookmarks.each do |bookmark| %>
	<li>
	<%= bookmark.movie.title %>  - <%= bookmark.movie.overview %> 
	</li> 
<% end %>
</ul>



<%= link_to "Create a bookmark", new_list_bookmark_path(@list.id), class: "btn btn-info"  %>
<%= link_to 'Back', lists_path, class: "btn btn-info" %>
<%= link_to 'Delete list', list_path(@list), method: :delete, class: 'btn btn-info', data: { confirm: 'Are you sure you want to delete this list?' } %>